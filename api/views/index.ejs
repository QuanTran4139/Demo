<!
-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <% for (var i = 0; i < books.length; i++) { %>
                <div class="post-preview">
                    <h6>
                        ID:<%= books[i].id %>
                    </h6>

                        <h2 >
                            <a href="/api/books/<%= books[i].id %>">
                            <%= books[i].title %>
                            </a>
                        </h2>

                    <h3>
                        By <%= books[i].author %>
                    </h3>
                    <p>
                        <%= books[i].description %>
                    </p>
                </div>
                <hr>
            <% } %>
            <!-- Pager -->
            â€¦
        </div>
    </div>
</div>
